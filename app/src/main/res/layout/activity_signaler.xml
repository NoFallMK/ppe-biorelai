<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignalerActivity">

    <Button
        android:id="@+id/btnRetour"
        android:layout_width="149dp"
        android:layout_height="57dp"
        android:layout_marginBottom="44dp"
        android:text="Retour"
        android:textColor="@color/black"
        app:backgroundTint="#BEBA1D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCliAbs"
        app:layout_constraintVertical_bias="0.74" />

    <Button
        android:id="@+id/btnNonRecup"
        android:layout_width="158dp"
        android:layout_height="51dp"
        android:layout_marginTop="16dp"
        android:text="Non récupérée"
        android:textColor="@color/black"
        app:backgroundTint="#BEBA1D"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toEndOf="@+id/btnPartRecup"
        app:layout_constraintTop_toBottomOf="@+id/btnModifierQtte" />

    <Button
        android:id="@+id/btnCliAbs"
        android:layout_width="164dp"
        android:layout_height="51dp"
        android:layout_marginTop="88dp"
        android:text="Client Absent"
        android:textColor="@color/black"
        app:backgroundTint="#BEBA1D"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnModifierQtte" />

    <Button
        android:id="@+id/btnModifierQtte"
        android:layout_width="164dp"
        android:layout_height="54dp"
        android:layout_marginTop="120dp"
        android:text="Modifier Quantité"
        android:textColor="@color/black"
        app:backgroundTint="#BEBA1D"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgBioRelai" />

    <Button
        android:id="@+id/btnPartRecup"
        android:layout_width="158dp"
        android:layout_height="51dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="18dp"
        android:text="Partiellement récupérée"
        android:textColor="@color/black"
        app:backgroundTint="#BEBA1D"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnModifierQtte" />

    <ImageView
        android:id="@+id/imgBioRelai"
        android:layout_width="414dp"
        android:layout_height="114dp"
        android:layout_marginTop="52dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/biorelais"
        tools:layout_editor_absoluteX="-1dp" />

    <TextView
        android:id="@+id/lblCommande"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgBioRelai" />

</androidx.constraintlayout.widget.ConstraintLayout>